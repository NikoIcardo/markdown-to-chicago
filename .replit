modules = ["web", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["chromium", "nss", "freetype", "harfbuzz", "cacert", "fontconfig", "xorg.libX11", "xorg.libXcomposite", "xorg.libXcursor", "xorg.libXdamage", "xorg.libXext", "xorg.libXfixes", "xorg.libXi", "xorg.libXrandr", "xorg.libXrender", "xorg.libXtst", "xorg.libxcb", "xorg.libxshmfence", "mesa", "pango", "cairo", "cups", "dbus", "at-spi2-atk", "at-spi2-core", "gtk3", "gdk-pixbuf", "libdrm", "expat", "alsa-lib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dev"

[[workflows.workflow]]
name = "dev"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5173

[[ports]]
localPort = 5174
externalPort = 6800
exposeLocalhost = true

[[ports]]
localPort = 35197
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd frontend && npm run preview -- --host 0.0.0.0 --port 5000"]
build = ["bash", "-c", "cd frontend && npm install && npm run build"]
